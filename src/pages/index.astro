import PortfolioSection from '../components/PortfolioSection.astro'
---

<Layout title="Pixelado - La Web al alcance de todos.">
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-smooth">
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ServicesSection />
		</div>
		<div class="snap-center">
			<PortfolioSection />
